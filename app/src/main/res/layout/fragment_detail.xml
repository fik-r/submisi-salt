<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/BaseFont_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="24dp"
        android:text="Lorem ipsum dolor sit amet"
        android:textColor="@color/sooty"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thumbnail" />

    <View
        android:id="@+id/line"
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="12dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_author"
        style="@style/BaseFont_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/sooty"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:text="BBC" />

    <TextView
        android:id="@+id/tv_published_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_author"
        tools:text="September 19, 2020" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/BaseFont_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mavenpro_regular"
        android:textColor="@color/jet"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_published_at"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi in pretium purus. Sed eget tempus libero. Vivamus venenatis vel massa non commodo. Nullam malesuada sodales nulla, vel eleifend massa mattis sit amet. Donec vitae imperdiet quam, vitae dictum sapien. Nulla ornare nulla non est pulvinar vehicula. Donec vitae arcu viverra, pellentesque dui at, bibendum leo. Nam id massa eget nunc fringilla tristique ac id urna. Duis fringilla sagittis orci, eget congue nisl placerat in. Cras ultricies tortor enim, at pulvinar orci feugiat sed. Sed elit sem, dictum et rutrum varius, imperdiet ac magna. Vivamus vel malesuada mauris. " />
</androidx.constraintlayout.widget.ConstraintLayout>